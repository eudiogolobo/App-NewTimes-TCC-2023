{$R *.dfm}
uses
u_dm, U_pqexaluno,u_pqal;

procedure Tfrm_exaluno.btn_cancelarClick(Sender: TObject);
begin
// excluindo anexos de documetos
with dm.tbanexo do
 begin
   close;
   sql.clear;
   sql.Add('delete * from anexo_documentos where AlunoCod = :ddd');
   parambyname('ddd').AsInteger:= CodExclusao;
 end;

 // excluindo documetos
with dm.tbdocumentos do
 begin
   close;
   sql.clear;
   sql.Add('delete * from documentos where AlunoCod = :ddd');
   parambyname('ddd').AsInteger:= CodExclusao;
 end;

 // excluindo endereço
with dm.tbendereco do
 begin
   close;
   sql.clear;
   sql.Add('delete * from endereco where AlunoCod = :ddd');
   parambyname('ddd').AsInteger:= CodExclusao;
 end;

 // excluindo info. complementar
with dm.tbinfocomp do
 begin
   close;
   sql.clear;
   sql.Add('delete * from info_complementar where AlunoCod = :ddd');
   parambyname('ddd').AsInteger:= CodExclusao;
 end;

 // excluindo responsaveis
with dm.tbresponsaveis do
 begin
   close;
   sql.clear;
   sql.Add('delete * from responsaveis where AlunoCod = :ddd');
   parambyname('ddd').AsInteger:= CodExclusao;
 end;

 // excluindo saude
with dm.tbsaude do
 begin
   close;
   sql.clear;
   sql.Add('delete * from saude where AlunoCod = :ddd');
   parambyname('ddd').AsInteger:= CodExclusao;
 end;
end;

procedure Tfrm_exaluno.FormCreate(Sender: TObject);
begin
edit1.Text:= dm.qconsultanome.Text;
edit2.Text:= dm.qconsultacpf.Text;
edit3.Text:= dm.qconsultasexo.Text;
edit40.Text:= dm.qconsultarg.Text;
maskedit1.Text:=datetostr( dm.qconsultadata_nasc.value);
end;

procedure Tfrm_exaluno.iaClick(Sender: TObject);
begin
if edit1.Text<>'' then
 begin
  dm.tbalunos.Open();
  if dm.tbalunos.Locate('id', edit1.text,[]) then
   begin
   if MessageDlg('Você confirma o aluno?',mtConfirmation,[mbyes, mbno],0)=mryes then
      begin
      dm.tbalunos.Edit;

      end
    else
    begin
    dm.tbalunos.Cancel;
    dm.tbalunos.close;
    end;

   end;
  end
  else
   showmessage('Nenhum ID escrito!');
end;

procedure Tfrm_exaluno.SpeedButton2Click(Sender: TObject);
begin
application.CreateForm(Tfrm_pqexal,  frm_pqexal);
 frm_pqexal.ShowModal;
end;

procedure Tfrm_exaluno.SpeedButton3Click(Sender: TObject);
begin
if dm.tbalunos.Locate('id', edit1.text,[]) then
 begin
 if MessageDlg('Deseja mesmo deletar este aluno?',mtConfirmation,[mbyes, mbno],0)=mryes then
    begin
    dm.tbalunos.delete;
   showmessage('Deletado com Sucesso!');
    dm.FDTransaction1.StartTransaction;
    dm.FDTransaction1.CommitRetaining;
    end;
 end
 else
 begin
   dm.tbalunos.Cancel;
   dm.tbalunos.CLOSE;
 end;
end;

end.
