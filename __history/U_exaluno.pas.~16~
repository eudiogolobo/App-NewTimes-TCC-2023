  Vcl.Imaging.pngimage, Vcl.ExtCtrls, Vcl.DBCtrls, Vcl.Mask;

type
  Tfrm_exaluno = class(TForm)
    Panel2: TPanel;
    Label17: TLabel;
    Panel7: TPanel;
    Label3: TLabel;
    Panel8: TPanel;
    Edit1: TEdit;
    Panel15: TPanel;
    Label7: TLabel;
    Panel12: TPanel;
    Edit40: TEdit;
    Panel19: TPanel;
    Label9: TLabel;
    Panel35: TPanel;
    Label1: TLabel;
    Panel1: TPanel;
    Panel4: TPanel;
    Label18: TLabel;
    MaskEdit1: TMaskEdit;
    Panel27: TPanel;
    Label13: TLabel;
    Edit2: TEdit;
