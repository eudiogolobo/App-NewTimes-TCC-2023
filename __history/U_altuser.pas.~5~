unit U_altuser;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Buttons, Vcl.StdCtrls, Vcl.Mask,
  Vcl.DBCtrls, Vcl.ExtCtrls, Vcl.Imaging.pngimage;

type
  Tfrm_altuser = class(TForm)
    Panel1: TPanel;
    Panel4: TPanel;
    Label1: TLabel;
    Panel5: TPanel;
    DBEdit2: TDBEdit;
    Panel2: TPanel;
    Label2: TLabel;
    Panel3: TPanel;
    DBEdit1: TDBEdit;
    Panel6: TPanel;
    Label3: TLabel;
    Panel7: TPanel;
    DBEdit3: TDBEdit;
    btn_salvar: TPanel;
    SpeedButton1: TSpeedButton;
    Panel8: TPanel;
    Label4: TLabel;
    Panel9: TPanel;
    DBEdit4: TDBEdit;
    Panel35: TPanel;
    Panel36: TPanel;
    SpeedButton2: TSpeedButton;
    Panel37: TPanel;
    SpeedButton4: TSpeedButton;
    Panel38: TPanel;
    SpeedButton5: TSpeedButton;
    Panel39: TPanel;
    Label5: TLabel;
    Panel40: TPanel;
    Edit1: TEdit;
    procedure iaClick(Sender: TObject);
    procedure SpeedButton1Click(Sender: TObject);
    procedure SpeedButton4Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frm_altuser: Tfrm_altuser;

implementation

{$R *.dfm}
uses
u_dm, U_pesqaluser;

procedure Tfrm_altuser.iaClick(Sender: TObject);
begin
 if edit1.Text<>'' then
 begin
dm.tbuser.Open();
if dm.tbuser.Locate('id', edit1.text,[]) then
 begin
 if MessageDlg('Você deseja alterar dados desse usuário?',mtConfirmation,[mbyes, mbno],0)=mryes then
    begin
   dm.tbuser.Edit;
   dbedit2.SetFocus;
  end;
 end;
 end
  else
    showmessage('Campo obrigatório em branco!');
end;

procedure Tfrm_altuser.SpeedButton1Click(Sender: TObject);
begin
 if edit1.Text<>'' then
 begin
if dm.tbuser.Locate('id', edit1.text,[]) then
 begin
 if MessageDlg('Você confirma a alteração de dados desse usuário?',mtConfirmation,[mbyes, mbno],0)=mryes then
    begin
    dm.tbuser.Edit;
   dm.tbuser.post;
   showmessage('Dados Alterados com Sucesso!');
    dm.FDTransaction1.StartTransaction;
 dm.FDTransaction1.CommitRetaining;
    end;
 end
 else
 begin
   dm.tbuser.Cancel;
   dm.tbuser.CLOSE;
 end;
 end
 else
 showmessage('Nenhum usuário selecionado!')
end;

procedure Tfrm_altuser.SpeedButton4Click(Sender: TObject);
begin
application.CreateForm(Tfrm_pqaluser,  frm_pqaluser);
 frm_pqaluser.ShowModal;
end;

end.
