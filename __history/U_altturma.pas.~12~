unit U_altturma;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls,
  Vcl.DBCtrls, Vcl.Mask, u_dm;

type
  Tfrm_altturma = class(TForm)
    Panel2: TPanel;
    Panel5: TPanel;
    Label2: TLabel;
    Panel6: TPanel;
    DBEdit2: TDBEdit;
    Panel7: TPanel;
    Label3: TLabel;
    Panel3: TPanel;
    DBEdit1: TDBEdit;
    Panel29: TPanel;
    Label15: TLabel;
    cb2: TDBComboBox;
    Panel4: TPanel;
    Label4: TLabel;
    cb1: TDBComboBox;
    Panel8: TPanel;
    Label5: TLabel;
    cb3: TDBComboBox;
    Panel30: TPanel;
    SpeedButton3: TSpeedButton;
    Panel9: TPanel;
    SpeedButton2: TSpeedButton;
    Panel35: TPanel;
    Panel36: TPanel;
    SpeedButton1: TSpeedButton;
    Panel37: TPanel;
    SpeedButton4: TSpeedButton;
    Panel39: TPanel;
    Label1: TLabel;
    Panel40: TPanel;
    Edit1: TEdit;
    procedure SpeedButton3Click(Sender: TObject);
    procedure SpeedButton4Click(Sender: TObject);
    procedure SpeedButton1Click(Sender: TObject);
    procedure SpeedButton2Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frm_altturma: Tfrm_altturma;

implementation

{$R *.dfm}
uses
u_altpesturma;

procedure Tfrm_altturma.FormCreate(Sender: TObject);

begin
    dm.tbcursos.open;
 begin
    dm.tbcursos.First;
    while not dm.tbcursos.Eof do
     begin
     cb2.Items.Add(dm.tbcursosnome.value);
     dm.tbcursos.Next;
     end;
 end;

end;

procedure Tfrm_altturma.SpeedButton1Click(Sender: TObject);
begin
if edit1.Text<>'' then
 begin
dm.tbturma.Open();
if dm.tbturma.Locate('id_turmas', edit1.text,[]) then
 begin
 if MessageDlg('Você deseja alterar dados dessa turma?',mtConfirmation,[mbyes, mbno],0)=mryes then
    begin
      speedbutton1.Enabled:=false;
      dbedit1.Enabled:=true;
      dbedit2.Enabled:=true;
      cb1.Enabled:=true;
      cb2.Enabled:=true;
      cb3.Enabled:=true;
      dbedit1.SetFocus;
  end;
 end;
 end
 else
 showmessage('Nenhum ID escrito!');
end;

procedure Tfrm_altturma.SpeedButton2Click(Sender: TObject);
begin
dm.tbturma.close;
 dm.tbturma.open;
 dm.tbturma.Locate('id_turmas', edit1.text,[]);

 dbedit1.Enabled:=false;
 dbedit2.Enabled:=false;
 cb1.Enabled:=false;
 cb2.Enabled:=false;
 cb3.Enabled:=false;
 speedbutton1.Enabled:=true;
end;

procedure Tfrm_altturma.SpeedButton3Click(Sender: TObject);
begin
      if dm.tbturma.Locate('id_turmas', edit1.text,[]) then
      begin
        if dbedit1.Enabled=true  then
         begin
         if MessageDlg('Você confirma a alteração de dados dessa turma?',mtConfirmation,[mbyes, mbno],0)=mryes then
            begin
            dm.tbturma.Edit;
            dm.tbturma.post;
            showmessage('Dados Alterados com Sucesso!');

            dbedit1.Enabled:=false;
            dbedit2.Enabled:=false;
            cb1.Enabled:=false;
            cb2.Enabled:=false;
            cb3.Enabled:=false;
            speedbutton1.Enabled:=true;

            dm.FDTransaction1.StartTransaction;
            dm.FDTransaction1.CommitRetaining;
          end;

          end
         else
         showmessage('Começe antes de salvar.');
      end
      else
      showmessage('Nenhum aluno selecionado!');

end;

procedure Tfrm_altturma.SpeedButton4Click(Sender: TObject);
begin
application.CreateForm(Tfrm_pqaltturma, frm_pqaltturma);
frm_pqaltturma.ShowModal;
end;

end.
